<%- include('partials/header') %>

    <div class="contact-page-modern">
        <div class="contact-wrapper-modern box-shadow-xl">
            <!-- Left Panel: Info (Blue) -->
            <div class="contact-info-panel">
                <div class="info-content">
                    <span class="badge-pill">Let's Talk</span>
                    <h2>Get in Touch</h2>
                    <p>Fill out the form and our team will get back to you within 24 hours.</p>

                    <div class="info-features">
                        <div class="feature-item">
                            <div class="feature-icon">
                                <i class="fa-solid fa-clock"></i>
                            </div>
                            <div class="feature-text">
                                <h4>Quick Response</h4>
                                <p>We respond to all inquiries within 24 hours</p>
                            </div>
                        </div>
                        <div class="feature-item">
                            <div class="feature-icon">
                                <i class="fa-solid fa-shield-halved"></i>
                            </div>
                            <div class="feature-text">
                                <h4>100% Secure</h4>
                                <p>Your information is safe with us</p>
                            </div>
                        </div>
                        <div class="feature-item">
                            <div class="feature-icon">
                                <i class="fa-solid fa-headset"></i>
                            </div>
                            <div class="feature-text">
                                <h4>Expert Support</h4>
                                <p>Talk to our experienced team</p>
                            </div>
                        </div>
                    </div>

                    <div class="direct-contact">
                        <h5>Or Reach Us Directly</h5>
                        <a href="tel:+917858003965" class="contact-link">
                            <i class="fa-solid fa-phone"></i> +91 7858003965
                        </a>
                        <a href="mailto:info@karmanyainfotech.com" class="contact-link">
                            <i class="fa-solid fa-envelope"></i> info@karmanyainfotech.com
                        </a>
                    </div>
                </div>
            </div>

            <!-- Right Panel: Form (White) -->
            <div class="contact-form-panel">
                <h2>Send us a Message</h2>
                <p>We'd love to hear from you. Fill out the form below.</p>

                <% if (typeof errors !=='undefined' && errors.length> 0) { %>
                    <div class="glass-alert alert-danger" style="margin-bottom: 20px;">
                        <i class="fas fa-circle-exclamation"></i>
                        <ul>
                            <% errors.forEach(error=> { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                                <% }); %>
                        </ul>
                    </div>
                    <% } %>

                        <form action="/contact" method="POST" class="modern-form">
                            <div class="form-grid">
                                <div class="form-group">
                                    <label><i class="fa-solid fa-user"></i> Your Name *</label>
                                    <input type="text" name="fullName" class="form-control" required
                                        placeholder="Your Name"
                                        value="<%= typeof formData !== 'undefined' ? formData.fullName : '' %>">
                                </div>
                                <div class="form-group">
                                    <label><i class="fa-solid fa-phone"></i> Phone Number *</label>
                                    <input type="tel" name="mobile" class="form-control" required
                                        placeholder="+91 1234567890"
                                        value="<%= typeof formData !== 'undefined' ? formData.mobile : '' %>">
                                </div>
                            </div>

                            <div class="form-group">
                                <label><i class="fa-solid fa-envelope"></i> Email Address *</label>
                                <input type="email" name="email" class="form-control" required
                                    placeholder="email@example.com"
                                    value="<%= typeof formData !== 'undefined' ? formData.email : '' %>">
                            </div>

                            <div class="form-grid" style="margin-top: 20px;">
                                <div class="form-group">
                                    <label><i class="fa-solid fa-building"></i> Organization Name *</label>
                                    <input type="text" name="organizationName" class="form-control" required
                                        placeholder="Company or College"
                                        value="<%= typeof formData !== 'undefined' ? formData.organizationName : '' %>">
                                </div>
                                <div class="form-group">
                                    <label><i class="fa-solid fa-layer-group"></i> Organization Type *</label>
                                    <select name="organizationType" class="form-control" required>
                                        <option value="" disabled <%=typeof formData==='undefined' ? 'selected' : '' %>
                                            >Select
                                            type</option>
                                        <option value="College" <%=typeof formData !=='undefined' &&
                                            formData.organizationType==='College' ? 'selected' : '' %>>University /
                                            College
                                        </option>
                                        <option value="School" <%=typeof formData !=='undefined' &&
                                            formData.organizationType==='School' ? 'selected' : '' %>>School / K-12
                                        </option>
                                        <option value="Coaching Institute" <%=typeof formData !=='undefined' &&
                                            formData.organizationType==='Coaching Institute' ? 'selected' : '' %>
                                            >Coaching
                                            Institute</option>
                                        <option value="Business" <%=typeof formData !=='undefined' &&
                                            formData.organizationType==='Business' ? 'selected' : '' %>>Enterprise /
                                            Business
                                        </option>
                                        <option value="Startup" <%=typeof formData !=='undefined' &&
                                            formData.organizationType==='Startup' ? 'selected' : '' %>>Startup</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group" style="margin-top: 20px;">
                                <label><i class="fa-solid fa-briefcase"></i> Service Interested In *</label>
                                <select name="serviceInterested" class="form-control" required>
                                    <option value="" disabled <%=typeof formData==='undefined' ? 'selected' : '' %>
                                        >Select a
                                        Service</option>
                                    <option value="Education ERP" <%=typeof formData !=='undefined' &&
                                        formData.serviceInterested==='Education ERP' ? 'selected' : '' %>>Education ERP
                                    </option>
                                    <option value="Website Development" <%=typeof formData !=='undefined' &&
                                        formData.serviceInterested==='Website Development' ? 'selected' : '' %>>Web
                                        Development
                                    </option>
                                    <option value="Custom Software" <%=typeof formData !=='undefined' &&
                                        formData.serviceInterested==='Custom Software' ? 'selected' : '' %>>Custom
                                        Software
                                    </option>
                                    <option value="Mobile App" <%=typeof formData !=='undefined' &&
                                        formData.serviceInterested==='Mobile App' ? 'selected' : '' %>>Mobile
                                        Application
                                    </option>
                                    <option value="Other" <%=typeof formData !=='undefined' &&
                                        formData.serviceInterested==='Other' ? 'selected' : '' %>>Other</option>
                                </select>
                            </div>

                            <div class="form-group" style="margin-top: 20px;">
                                <label><i class="fa-solid fa-message"></i> Your Message</label>
                                <textarea name="message" class="form-control" required
                                    placeholder="Tell us about your project requirements..."><%= typeof formData !== 'undefined' ? formData.message : '' %></textarea>
                            </div>

                            <button type="submit" class="btn-submit" style="margin-top: 30px;">
                                <i class="fa-solid fa-paper-plane"></i> Send Message
                            </button>
                        </form>

                        <div class="whatsapp-cta">
                            <p>Prefer instant messaging?</p>
                            <a href="https://wa.me/917858003965" target="_blank" class="btn-whatsapp-large">
                                <i class="fa-brands fa-whatsapp"></i> Chat on WhatsApp
                            </a>
                        </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>